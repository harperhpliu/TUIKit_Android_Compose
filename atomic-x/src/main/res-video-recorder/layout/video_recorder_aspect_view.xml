<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/root_aspect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <ImageView
            android:id="@+id/iv_aspect"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginBottom="6dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/video_recorder_aspect_916"
            android:contentDescription="@string/video_recorder_empty" />

    <TextView
            android:id="@+id/tv_aspect"
            android:textColor="@color/video_recorder_white"
            android:textSize="11sp"
            android:fontFamily="@string/video_recorder_common_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center" />
</LinearLayout>