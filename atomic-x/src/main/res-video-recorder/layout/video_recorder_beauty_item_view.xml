<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="60dp"
        android:layout_height="86dp"
        android:layout_marginLeft="6dp"
        android:orientation="vertical">

    <RelativeLayout
            android:id="@+id/rl_iv_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:gravity="center">

        <ImageView
                android:id="@+id/beauty_iv_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:src="@drawable/video_recorder_beauty_cancel"
                android:contentDescription="@string/video_recorder_empty" />
    </RelativeLayout>

    <ImageView
            android:id="@+id/select_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ImageView>

    <TextView
            android:id="@+id/beauty_tv_title"
            android:textColor="@color/video_recorder_white"
            android:textSize="11sp"
            android:fontFamily="@string/video_recorder_common_font"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_below="@+id/rl_iv_icon"
            android:gravity="center" />
</RelativeLayout>